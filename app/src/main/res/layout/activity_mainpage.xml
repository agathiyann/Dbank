<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/img1"
    android:padding="10dp"
    android:layout_height="match_parent"
    tools:context=".MAinpage">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="25dp"
        >




    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="25dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold|italic"
                android:textSize="20dp"
                android:text="Select Your Bank"
                android:layout_gravity="center"
                android:textColor="#8A4B4B"

                />


            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/sbi"
                android:id="@+id/sbi"
                android:layout_marginTop="20dp"
                />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@drawable/canarabank"
                android:layout_marginTop="20dp"
                android:id="@+id/canera"
                />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/tmb"
                android:layout_marginTop="20dp"
                android:id="@+id/tmb"
                />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:id="@+id/hdfc"
                android:src="@drawable/hdfc"
                android:layout_marginTop="20dp"
                />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/axis"
                android:layout_marginTop="20dp"
                android:id="@+id/axies"
                />




            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/icici"
                android:layout_marginTop="20dp"
                android:id="@+id/icici"
                android:layout_marginBottom="25dp"
                />





        </LinearLayout>



    </ScrollView>

</LinearLayout>